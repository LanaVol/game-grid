{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "baseUrl": ".",
    "paths": {
        "@*": ["./src/*"]
    },
    "include": ["src", "webpack.config.ts", "config"],
    "exclude": ["node_modules", "dist"]
}
